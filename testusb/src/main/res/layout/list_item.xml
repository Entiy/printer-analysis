<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="18dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DeviceName \nDeviceClass \nProductName \nManufacturerName \nSerialNumber"
        android:id="@+id/item_textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/item_button_select" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT"
        android:id="@+id/item_button_select"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/item_textView"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
